import random
from turtle import Turtle, Screen

# setup screen
screen = Screen()
screen.setup(width=500, height=400)

# user bet
user_bet = screen.textinput(
    title="Make your bet",
    prompt="Which turtle will win the race? Enter a colour:"
)

# turtle settings
colours = ["red", "blue", "yellow", "green", "purple", "pink"]
y_positions = [-70, -40, -10, 20, 50, 80]
all_turtles = []

# create turtles
for index in range(6):
    turtle = Turtle(shape="turtle")
    turtle.penup()
    turtle.color(colours[index])
    turtle.goto(x=-230, y=y_positions[index])
    all_turtles.append(turtle)

# start race
is_race_on = False
if user_bet:
    is_race_on = True

# race loop
while is_race_on:
    for turtle in all_turtles:
        turtle.forward(random.randint(0, 10))

        # check finish line
        if turtle.xcor() > 230:
            is_race_on = False
            winning_colour = turtle.pencolor()

            if winning_colour == user_bet:
                print(f"You WON ðŸŽ‰ The {winning_colour} turtle is the winner!")
            else:
                print(f"You LOST ðŸ˜­ The {winning_colour} turtle won.")

screen.exitonclick()
